<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FerreteriaMovil.VistasInternas.VistaMenuClientes"
             BackgroundColor="#029DAF"
             Title="Menu de Compra">

    <ScrollView>
        <CollectionView x:Name="ProductosCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="White" BorderColor="LightGray" CornerRadius="10" Padding="10" Margin="15">
                        <VerticalStackLayout Spacing="5">
                            <Label
                                Text="PRODUTO DISPONIBLE"
                                FontSize="Subtitle"
                                FontAttributes="Bold"
                                TextColor="Black"
                                HorizontalOptions="Center"/>
                            <Image Source="{Binding Imagen}" Aspect="AspectFit" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center"/>
                            <Label Text="{Binding Nombre}" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                            <Label Text="{Binding Descripcion}" TextColor="Black" HorizontalOptions="Center"/>
                            <Label Text="{Binding Precio}" FontSize="Subtitle" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center"/>
                            <Button Text="Agregar al Carrito" FontSize="Medium" Clicked="AgregarCarritoButton"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>

</ContentPage>
