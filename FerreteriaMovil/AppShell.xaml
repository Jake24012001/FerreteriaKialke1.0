<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FerreteriaMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FerreteriaMovil"
    xmlns:vistasInternas="clr-namespace:FerreteriaMovil.VistasInternas"
    Shell.FlyoutBehavior="Disabled"
    Title="FerreteriaKialke">

    <ShellContent Title="Inicio" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    <ShellContent Title="Registro" ContentTemplate="{DataTemplate vistasInternas:RegistroP}" Route="RegistroP" />
    <ShellContent Title="Login" ContentTemplate="{DataTemplate vistasInternas:LoginP}" Route="LoginP" />
    <ShellContent Title="Vista Clientes" ContentTemplate="{DataTemplate vistasInternas:VistaMenuClientes}" Route="VistaMenuClientes" />
    <!-- Añade más ventanas aquí -->

</Shell>
